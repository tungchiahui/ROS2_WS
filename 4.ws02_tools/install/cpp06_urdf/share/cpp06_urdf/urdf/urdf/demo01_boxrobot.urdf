<!-- 
    需求：显示一盒状机器人
    长:1.0m
    宽:0.5m
    高:0.1m
 -->
 <!-- 根标签 -->
 <robot name="boxrobot"> 
  <!-- 连杆 -->
    <link name="base_link"> 
      <!-- 可视化 -->
      <visual>
        <!-- 几何图形 -->
        <geometry>
          <!-- 长方体 -->
          <box size="1.0 0.5 0.1"/>
        </geometry>
      </visual>
    </link>
  </robot>